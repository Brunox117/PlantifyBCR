<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPlantaG"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/verde2"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    card_view:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ivPlantaG"
            android:layout_width="80dp"
            android:layout_height="80dp"
            card_view:cardCornerRadius="50dp"
            card_view:cardElevation="10dp">
            <ImageView
                android:id="@+id/ivPlantaG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/aloe_vera_example" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvNombrePlantaG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/cv_ivPlantaG"
            android:layout_toRightOf="@id/cv_ivPlantaG"
            android:fontFamily="@font/bree_serif"
            android:text="Planta 1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ivBorrarGrupoEsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/tvNombrePlantaG"
            card_view:srcCompat="@android:drawable/ic_menu_delete" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>